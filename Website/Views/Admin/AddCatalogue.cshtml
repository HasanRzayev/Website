@using Website.Models.Entity
@using Website.Models.ViewModels



@model Catalogue




@{
    Layout = null;
}




  <!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../css/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../css/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="../../css/assets/vendors/select2/select2.min.css">
    <link rel="stylesheet" href="../../css/assets/vendors/select2-bootstrap-theme/select2-bootstrap.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../css/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../css/assets/images/favicon.png" />
  </head>
  <body>
    <div class="container-scroller">
  
      <partial name="~/Views/Admin/_navbarpartial.cshtml" model=ViewBag.Images />
      <div class="container-fluid page-body-wrapper">
        <partial name="~/Views/Admin/_sidebarpartial.cshtml" model=ViewBag.Images />
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Add Catagory </h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Forms</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Form elements</li>
                </ol>
              </nav>
            </div>
            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">

              </div>
              <div class="col-md-6 grid-margin stretch-card">

              </div>
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                    <p class="card-description"> Add class <code>.table-striped</code>
                    </p>
                    <div class="table-responsive">
                        
                   
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Basic form elements</h4>
             
                    <form class="forms-sample" asp-action="AddCatalogue" asp-controller="Admin" method="post" enctype="multipart/form-data">
                      <div class="form-group">
                        <label >Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span asp-validation-for=Name></span>
                      </div>
                      <div class="col-md-10">
                                            @Html.EditorFor(model => model.Image_url, new { htmlAttributes = new { @class = "form-control", @type="file"} })
                                          
                        </div>
                       <div class="form-group">
                             <div class="col-md-offset-2 col-md-10">
                                 <input type="submit" value="Upload" class="btn btn-primary" />
                             </div>
                         </div>
                     
                   
                     
                      <button type="submit" class="btn btn-primary mr-2">Submit</button>
                      <button class="btn btn-dark">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>


         <partial name="~/Views/Admin/_footerpartial.cshtml" model=ViewBag.Images />
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../css/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../../css/assets/vendors/select2/select2.min.js"></script>
    <script src="../../css/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../css/assets/js/off-canvas.js"></script>
    <script src="../../css/assets/js/hoverable-collapse.js"></script>
    <script src="../../css/assets/js/misc.js"></script>
    <script src="../../css/assets/js/settings.js"></script>
    <script src="../../css/assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="../../css/assets/js/file-upload.js"></script>
    <script src="../../css/assets/js/typeahead.js"></script>
    <script src="../../css/assets/js/select2.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>